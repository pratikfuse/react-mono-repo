{
    "plugins": [
        "stylelint-prettier"
    ],
    "extends": [
        "stylelint-config-sass-guidelines",
        "stylelint-config-prettier",
        "stylelint-prettier/recommended"
    ],
    "rules": {
        "max-nesting-depth": [
            2,
            {
                "ignoreAtRules": [
                    "include",
                    "media",
                    "after"
                ]
            }
        ]
    }
}