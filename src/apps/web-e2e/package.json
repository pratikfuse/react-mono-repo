{
  "name": "@lf-mono-web/web-e2e",
  "version": "1.0.0",
  "description": "e2e test runner for web app",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "npm run cypress:local",
    "test:ci": "cypress open -c -w && npx nyc report --reporter=text-summary",
    "cypress:open": "cypress open -c -w"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "all": false
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "commonPath": "__tests__/common",
    "step_definitions": "__tests__"
  },
  "dependencies": {
    "@cypress/browserify-preprocessor": "^3.0.2",
    "@cypress/code-coverage": "3.10.0",
    "@types/cypress": "^1.1.3",
    "@types/cypress-cucumber-preprocessor": "^4.0.1",
    "cypress": "^10.3.0",
    "cypress-cucumber-preprocessor": "^4.2.0",
    "cypress-localstorage-commands": "^1.7.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/node": "^18.0.6",
    "babel-preset-es2015": "^6.24.1"
  }
}