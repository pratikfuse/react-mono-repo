{
  "name": "lf-mono-web",
  "version": "1.0.0",
  "author": {
    "email": "pratik.manandhar99@gmail.com",
    "name": "pratikfuse"
  },
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "add-pkg": "lerna add",
    "bootstrap": "lerna bootstrap",
    "dev": "lerna run dev",
    "start": "concurrently \"yarn dev\" \"lerna run start --scope @lf-mono-web/web-app\"",
    "build": "lerna run build --scope @lf-mono-web/scss && lerna run build --scope @lf-mono-web/components && lerna run build --scope @lf-mono-web/web-app",
    "serve": "serve",
    "mock-server": "lerna run start --scope=@lf-mono-web/server",
    "storybook": "lerna run storybook",
    "test:unit": "lerna run test:unit",
    "start:web-test": "lerna run start-test --scope @lf-mono-web/web-app",
    "test:cypress": "lerna run test:ci --scope @lf-mono-web/web-e2e",
    "test:e2e": "start-server-and-test start:web-test 3000 test:cypress",
    "lint": "lerna run lint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.5",
    "concurrently": "^7.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^8.0.0",
    "lerna": "^5.1.6",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-prettier": "^2.0.0"
  },
  "workspaces": {
    "packages": [
      "src/packages/*",
      "src/apps/*"
    ]
  },
  "engines": {
    "npm": "yarn-only",
    "node": ">=16.14"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*.scss": [
      "stylelint"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "dependencies": {
    "@cypress/instrument-cra": "^1.4.0",
    "start-server-and-test": "^1.14.0"
  }
}
